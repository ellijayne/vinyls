
<div class="form-group">

  <%= form_for @artist do |f| %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => 'form-control', :id => 'exampleFormControlInput1' %>
</div>

<div class="form-group">
  <%= f.label :info %>
  <%= f.text_area :info, :class => 'form-control', :id => 'exampleFormControlInput1' %>
</div>

<div class="form-group">
  <%= f.label :image, :class => "label-control" %><br />
    <%= f.file_field :image %>

</div>
<%= f.submit %>


  <% end %>

</div>
