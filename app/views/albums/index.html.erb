<h1>All Albums</h1>
<div class="index-albums-container">

  <% @albums.each do |album| %>

  <div class="index-album-grid">
      <%= link_to image_tag(album.image, :alt => album.title, :class => 'album_thumbnail'), album if album.image.present? %>

    <ul>
      <li><%= album.title  %></li>
      <li>Realeased: <%= album.date.strftime '%e %b %Y' %></li>
      <!-- dont think the line below will work, want to display artist name does work BUT also displays all album info at bottom.  -->

      <% if album.artist.present? %>
        <li>Artist: <%=link_to album.artist.name, album.artist %></li>
        <% else %>
        <br />
      <% end %>
    </ul>
  </div>
  <% end %>
