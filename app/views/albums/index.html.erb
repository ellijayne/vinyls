<h1>All Albums</h1>

<% @albums.each do |album| %>
  <%= link_to image_tag(album.image, :alt => album.title, :class => 'thumbnail'), album if album.image.present? %>
  <ul>
    <li><%= album.title  %></li>
    <li><%= album.date %></li>
    <!-- dont think the line below will work, want to display artist name does work BUT also displays all album info at bottom.  -->
    <li>From <%=link_to album.artist.name, album.artist %></li>
  </ul>
<% end %>
